<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sistemabancario</groupId>
  <artifactId>sistemabancario-completo-maven</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>sistemabancariocompleto-maven</name>
  
  <properties>
		<spring-core-version>4.0.1.RELEASE</spring-core-version>
		<maven.compiler.target>1.7</maven.compiler.target>
   		<maven.compiler.source>1.7</maven.compiler.source>
  </properties>
  
   <dependencies>
	  	<dependency>
		    <groupId>javax.servlet</groupId>
		    <artifactId>servlet-api</artifactId>
		    <version>2.5</version>
		</dependency>
		
		<!-- Dependencias de SPRING MVC-->

		<dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
            <version>4.2.6.RELEASE</version>
        </dependency>
        
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jstl</artifactId>
            <version>1.2</version>
        </dependency>

		<!--dependencia para la base de datos-->
		<dependency>
		    <groupId>org.postgresql</groupId>
		    <artifactId>postgresql</artifactId>
		    <version>42.3.2</version>
		</dependency>

	</dependencies>

  <build>
  	<plugins>
  		<plugin>
		    <artifactId>maven-war-plugin</artifactId>
		    <version>3.1.0</version>
		</plugin>
  	</plugins>
  </build>
  
</project>